<div class="d-flex gap-4 border-bottom pb-5 mb-5">
  <!-- 左側類別名稱 -->
  <div class="flex-shrink-0 side-width">
    <h2 class="fs-4 mb-3">職涯規劃</h2>
    <p class="text-natural-50">
      欄位皆為<span
        class="badge rounded-pill text-bg-danger ms-1"
        >必填</span
      >
    </p>
  </div>
  <!-- 右側表單 -->
  <div>
    <!-- 1 年短期職涯目標 -->
    <div class="mb-4">
      <div class="form-floating">
        <textarea
          class="form-control"
          placeholder="1 年短期職涯目標（最多 300 字）"
          id="1-yr-goal"
          style="height: 160px"
          maxlength="300"
        ></textarea>
        <label for="1-yr-goal">
          1 年短期職涯目標（最多 300 字）
        </label>
      </div>
    </div>
    <!-- 1-3 年中長期職涯願景 -->
    <div class="mb-4">
      <div class="form-floating">
        <textarea
          class="form-control"
          placeholder="1-3 年中長期職涯願景（最多 300 字）"
          id="3-yr-goal"
          style="height: 160px"
          maxlength="300"
        ></textarea>
        <label for="3-yr-goal">
          1-3 年中長期職涯願景（最多 300 字）
        </label>
      </div>
    </div>
    <!-- 理想工作模式 -->
    <div class="mb-4">
      <p class="mb-2">理想工作模式</p>
      <div class="px-2">
        <div class="form-check form-check-inline me-4 mb-2">
          <input
            class="form-check-input"
            type="radio"
            name="idealJobStatus"
            id="office"
            value="office"
            checked
          />
          <label class="form-check-label" for="office"
            >固定辦公室工作</label
          >
        </div>
        <div class="form-check form-check-inline me-4">
          <input
            class="form-check-input"
            type="radio"
            name="idealJobStatus"
            id="mixed"
            value="mixed"
          />
          <label class="form-check-label" for="mixed"
            >混合式工作(辦公室+遠端)</label
          >
        </div>
        <div class="form-check form-check-inline me-4">
          <input
            class="form-check-input"
            type="radio"
            name="idealJobStatus"
            id="remote"
            value="remote"
          />
          <label class="form-check-label" for="remote"
            >完全遠端工作(固定地點)</label
          >
        </div>
        <div class="form-check form-check-inline me-4">
          <input
            class="form-check-input"
            type="radio"
            name="idealJobStatus"
            id="freelancer"
            value="freelancer"
          />
          <label class="form-check-label" for="freelancer"
            >數位遊牧(邊工作邊旅行)</label
          >
        </div>
        <div class="form-check form-check-inline me-4">
          <input
            class="form-check-input"
            type="radio"
            name="idealJobStatus"
            id="other"
            value="other"
          />
          <label class="form-check-label" for="other"
            >其他(請說明)</label
          >
        </div>
      </div>
    </div>
    <!-- 目標薪資/收入 -->
    <div class="mb-4">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="salaryExpectation"
          placeholder="目標薪資/收入"
        />
        <label for="works">目標薪資/收入</label>
      </div>
    </div>
    <!-- 目前面臨的職涯挑戰 -->
    <div class="mb-4">
      <p class="mb-2">目前面臨的職涯挑戰</p>
      <div class="px-2">
        <div class="form-check form-check-inline me-4 mb-2">
          <input
            class="form-check-input"
            type="checkbox"
            id="challenge-1"
            value="challenge-1"
          />
          <label class="form-check-label" for="challenge-1"
